<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    tools:context=".Activities.PlayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:padding="16dp"
            android:text="Choose a type"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <Button
                android:id="@+id/btn_names"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Names"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_categories"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Categories"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_prices"
                android:layout_width="303dp"
                android:layout_height="102dp"
                android:layout_marginTop="16dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Prices"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_all"
                android:layout_width="303dp"
                android:layout_height="102dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="All"
                android:textSize="40dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_play_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="76"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_play_question"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/et_timer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/background_timer"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_answer1"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Answer 1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_answer2"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Answer 2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_answer3"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="25"
                android:background="@drawable/background_button_navigation"
                android:text="Answer 3"
                android:textSize="40dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

